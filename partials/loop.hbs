{{!loop template}}
{{#if posts}}
  {{#is "paged"}}
    {{pagination}}
  {{/is}}
{{/if}}
<section id="loop">
{{#if posts}}
  {{#foreach posts}}
    {{#if image}}
      <article>
        <section class="image">
          <img src="{{image}}"/>
        </section>
        <section class="body">
          <header>
            <h1>{{title}}</h1>
            {{#if tags}}
                <p><b>{{author}}</b> - {{tags separator=" & "}}</p>
              {{else}}
                <p><b>{{author}}</b></p>
            {{/if}}
          </header>
          <section class="excerpt">
            <p>{{excerpt words="40"}}</p>
          </section>
          <footer>
            <a href="{{url absolute="true"}}"><div class="ghostb">Läs</div></a>
          </footer>
        </section>
      </article>
    {{else}}
      <article>
        <header>
          <h1>{{title}}</h1>
          {{#if tags}}
              <p><b>{{author}}</b> - {{tags separator=" & "}}</p>
            {{else}}
              <p><b>{{author}}</b></p>
          {{/if}}
        </header>
        <section class="excerpt">
          <p>{{excerpt words="60"}}</p>
        </section>
        <footer>
          <a href="{{url absolute="true"}}"><div class="ghostb">Läs</div></a>
        </footer>
      </article>
    {{/if}}
  {{/foreach}}
  {{else}}

{{/if}}
</section>
{{#if posts}}
  {{pagination}}
{{/if}}
